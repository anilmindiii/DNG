<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical"
    tools:context="com.dng.activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/profileImg"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/profile_register_icon"
                app:siBorderColor="@color/colorPrimaryDark"
                app:siBorderWidth="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_question_serial_number1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center|top"
                    android:background="@drawable/circle_solid_dark_primary"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:id="@+id/view_connector_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical" />

                <View
                    android:id="@+id/view_connector_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center|top"
                    android:background="@drawable/circle_solid"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <ViewSwitcher
                android:id="@+id/simpleViewSwitcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateFirstView="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp">

                        <ImageView
                            android:id="@+id/email_view"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/user_icon" />

                        <EditText
                            android:id="@+id/ed_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/email_view"
                            android:background="@null"
                            android:hint="Full name"
                            android:fontFamily="@font/poppins_regular"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="#828282" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/email_view1"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/email_icon" />

                        <EditText
                            android:id="@+id/ed_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/email_view1"
                            android:background="@null"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Email iD"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/email_view2"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/phone_icon" />

                        <EditText
                            android:id="@+id/ed_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/email_view2"
                            android:fontFamily="@font/poppins_regular"
                            android:background="@null"
                            android:hint="Mobile"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLength="14"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ly_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/address_icon"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/place_icon"
                            android:tint="@color/gray" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/address_icon"
                            android:hint="Address"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ly_profile_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/upload"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/upload_image"
                            android:tint="@color/gray" />

                        <TextView
                            android:id="@+id/tv_upload_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/upload"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Profile image"
                            android:maxLines="1"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:text="Already have an account? Login"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/iv_driver_license"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/driver_license" />

                        <EditText
                            android:id="@+id/ed_driver_license"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/iv_driver_license"
                            android:background="@null"
                            android:hint="Driver License"
                            android:fontFamily="@font/poppins_regular"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ly_licence_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/iv_driver_license_ex"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/license_expaire" />

                        <TextView
                            android:id="@+id/tv_license_ex_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/iv_driver_license_ex"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="License Expiry Date"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ly_license_upload"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/iv_driver_license_id"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/driver_license" />

                        <TextView
                            android:id="@+id/tv_license_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_toRightOf="@+id/iv_driver_license_id"
                            android:hint="License ID"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/iv_license_upload"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/upload_image" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/email_vieww"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/user_icon" />

                        <EditText
                            android:id="@+id/ed_emergency_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/email_vieww"
                            android:background="@null"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Emergency Contact Name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/email_vieww1"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/emargency_icon" />

                        <EditText
                            android:id="@+id/ed_emergencyRelationship_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/email_vieww1"
                            android:background="@null"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Relationship"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/email_vieww12"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/phone_icon" />


                        <EditText
                            android:id="@+id/ed_emergencyPhoneNumber_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/email_vieww12"
                            android:background="@null"
                            android:hint="Mobile"
                            android:fontFamily="@font/poppins_regular"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLength="14"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/gray" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btn_signup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:background="@drawable/rounded_primary"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>

            </ViewSwitcher>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:src="@drawable/back"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/buttonNext"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:src="@drawable/next" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
