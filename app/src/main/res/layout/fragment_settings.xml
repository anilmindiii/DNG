<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dng.fragment.SettingsFragment">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_bg">

        <TextView
            android:fontFamily="@font/mavenpro_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Settings"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/ly_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_profile_tab"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                android:padding="@dimen/_14sdp"/>


            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/profile_heading"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_50sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:padding="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/ly_default_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:src="@drawable/pin_active_icon"
                android:padding="@dimen/_14sdp"/>


            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Choose default map"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_50sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:padding="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/ly_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:src="@drawable/logout_active_icon"
                android:padding="@dimen/_12sdp"/>


            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Logout"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_50sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:padding="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
