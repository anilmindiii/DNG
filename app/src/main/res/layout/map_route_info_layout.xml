<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/mavenpro_medium"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:text="Route Details"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/cancel"
            android:padding="@dimen/_8sdp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Address : "
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey"/>

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/tv_from_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="503 mindiii system private limited,krishna tower indore"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="left"
                    android:textColor="@color/grey"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Address : "
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey"/>

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/tv_to_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="503 mindiii system private limited,krishna tower indore"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="left"
                    android:textColor="@color/grey"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Distance : "
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey"/>

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/tv_total_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.4 km"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="left"
                    android:textColor="@color/grey"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approx Time : "
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey"/>

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/tv_aprox_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22 minute"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="left"
                    android:textColor="@color/grey"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</LinearLayout>
